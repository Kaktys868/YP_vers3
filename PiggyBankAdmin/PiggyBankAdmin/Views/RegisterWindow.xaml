<Window x:Class="PiggyBankAdmin.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация администратора" Height="400" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="👤 Регистрация администратора" 
                  FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Имя:"/>
        <TextBox Grid.Row="2" Name="NameTextBox" Margin="0,5,0,10"/>

        <TextBlock Grid.Row="3" Text="Email:"/>
        <TextBox Grid.Row="4" Name="EmailTextBox" Margin="0,5,0,10"/>

        <TextBlock Grid.Row="5" Text="Пароль:"/>
        <PasswordBox Grid.Row="6" Name="PasswordBox" Margin="0,5,0,15"/>

        <CheckBox Grid.Row="7" Name="IsAdminCheckBox" Content="Администратор" IsChecked="True" IsEnabled="False"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Зарегистрировать" Click="RegisterButton_Click" 
                    Background="#88D398" Foreground="White" Padding="15,8" FontSize="14" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="CancelButton_Click" 
                    Background="#F3E8D2" Padding="15,8" FontSize="14"/>
        </StackPanel>

        <TextBlock Name="ErrorText" Foreground="Red" Grid.Row="9" 
                  Visibility="Collapsed" TextWrapping="Wrap" Margin="0,10,0,0" HorizontalAlignment="Center"/>
    </Grid>
</Window>