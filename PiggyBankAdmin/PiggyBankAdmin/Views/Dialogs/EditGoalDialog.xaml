<Window x:Class="PiggyBankAdmin.Views.Dialogs.EditGoalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование цели" MinHeight="700" MinWidth="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="✏️ Редактирование цели" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" Text="Пользователь:" Margin="0,5"/>
        <ComboBox Grid.Row="2" Name="UserComboBox" DisplayMemberPath="Name" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3" Text="Название цели:" Margin="0,5"/>
        <TextBox Grid.Row="4" Name="NameTextBox" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="5" Text="Целевая сумма:" Margin="0,5"/>
        <TextBox Grid.Row="6" Name="TargetAmountTextBox" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="7" Text="Текущая сумма:" Margin="0,5,0,387"/>
        <TextBox Grid.Row="7" Name="CurrentAmountTextBox" Margin="0,32,0,369"/>

        <TextBlock Grid.Row="7" Text="Дедлайн:" Margin="0,107,0,294"/>
        <DatePicker Grid.Row="7" Name="DeadlineDatePicker" Margin="0,141,0,248"/>

        <CheckBox Grid.Row="7" Name="IsCompletedCheckBox" Content="Цель выполнена" Margin="0,219,0,178"/>

        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="SaveButton_Click" Background="#88D398" Foreground="White" Padding="15,5" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="CancelButton_Click" Background="#F3E8D2" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>