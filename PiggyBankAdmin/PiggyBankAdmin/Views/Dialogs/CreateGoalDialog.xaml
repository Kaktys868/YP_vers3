<Window x:Class="PiggyBankAdmin.Views.Dialogs.CreateGoalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание цели" MinHeight="700" MinWidth="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="🎯 Создание новой цели" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" Text="Пользователь:" Margin="0,5"/>
        <ComboBox Grid.Row="2" Name="UserComboBox" DisplayMemberPath="Name" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="3" Text="Название цели:" Margin="0,5"/>
        <TextBox Grid.Row="4" Name="NameTextBox" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="5" Text="Целевая сумма:" Margin="0,5,0,369"/>
        <TextBox Grid.Row="5" Name="TargetAmountTextBox" Margin="0,30,0,340"/>

        <TextBlock Grid.Row="5" Text="Дедлайн:" Margin="0,187,0,164"/>
        <DatePicker Grid.Row="5" Name="DeadlineDatePicker" Margin="0,211,0,164"/>

        <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Создать" Click="CreateButton_Click" Background="#88D398" Foreground="White" Padding="15,5" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="CancelButton_Click" Background="#F3E8D2" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>