<Window x:Class="PiggyBankAdmin.Views.Dialogs.CreateUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание пользователя" MinHeight="360" MinWidth="420" MaxHeight="360" MaxWidth="420"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="title" Text="Создание пользователя" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" Text="Имя:" Margin="5,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Grid.Row="1" Name="NameTextBox" Margin="5,20,0,0" Width="350" Grid.RowSpan="2" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBlock Grid.Row="2" Text="Email:" Margin="5,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Grid.Row="2" Name="EmailTextBox"  Margin="5,20,0,0" Width="350" Grid.RowSpan="2" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBlock Grid.Row="3" Text="Password:" Margin="5,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox Grid.Row="3" Name="Password1TextBox"  Margin="5,20,0,0" Width="350" Grid.RowSpan="2" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBlock Grid.Row="4" Text="Repeat Password:" Margin="5,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Grid.Row="4" Name="Password2TextBox"  Margin="5,20,0,0" Width="350" Grid.RowSpan="2" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <CheckBox Grid.Row="5" Name="IsActiveCheckBox" Content="Активный пользователь" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Left" Margin="186,15,0,0" Width="174" >
            <Button Content="Сохранить" Click="SaveButton_Click" Background="#88D398" Foreground="White" Padding="15,5" Margin="0,0,10,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button Content="Отмена" Click="CancelButton_Click" Background="#F3E8D2" Padding="15,5" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>