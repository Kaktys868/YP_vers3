<Page x:Class="PiggyBankAdmin.Views.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Пользователи">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Пользователи" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Добавить" Click="AddUser_Click" Background="#88D398" Foreground="White" Margin="20,0,0,0" Padding="10,5"/>
            <Button Content="Обновить" Click="RefreshUsers_Click" Background="#1A946F" Foreground="White" Margin="10,0,0,0" Padding="10,5"/>
        </StackPanel>

        <!-- Таблица пользователей -->
        <DataGrid Grid.Row="1" Name="UsersGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="Дата регистрации" Binding="{Binding CreatedAt, StringFormat=dd.MM.yyyy}" Width="120"/>
                <DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" Width="70"/>
                <DataGridTemplateColumn Header="Действия" Width="160">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Редактировать" Click="EditUser_Click" Tag="{Binding Id}" Margin="2" Padding="5"/>
                                <Button Content="Удалить" Click="DeleteUser_Click" Tag="{Binding Id}" Margin="2" Padding="5" Background="LightCoral"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Пользователи" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="Добавить" Click="AddUser_Click" Background="#88D398" Foreground="White" Margin="20,0,0,0" Padding="10,5"/>
            <Button Content="Обновить" Click="RefreshUsers_Click" Background="#1A946F" Foreground="White" Margin="10,0,0,0" Padding="10,5"/>
            <Button Content="Экспорт CSV" Click="ExportUsers_Click" Background="#114B5F" Foreground="White" Margin="10,0,0,0" Padding="10,5"/>
        </StackPanel>
    </Grid>
</Page>