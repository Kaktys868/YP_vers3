<Window x:Class="PiggyBankAdmin.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PiggyBank Admin" MinHeight="700" MinWidth="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка с информацией о пользователе -->
        <Border Grid.Row="0" Background="#114B5F" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="PiggyBank Admin" Foreground="White" FontSize="16" FontWeight="Bold"/>

                <TextBlock Grid.Column="1" Text=" | " Foreground="White" Margin="10,0" HorizontalAlignment="Center"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="👤 " Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Name="CurrentUserText" Text="Гость" Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Content="🚪 Выход" Click="LogoutButton_Click" Background="#1A946F" Foreground="White" Padding="10,5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Меню и контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Боковое меню -->
            <Border Grid.Column="0" Background="#F3E8D2" Padding="10">
                <StackPanel>
                    <Button Content="👥 Пользователи" Click="ShowUsers_Click" Background="#88D398" Foreground="White" Margin="0,5" Padding="10,5"/>
                    <Button Content="💳 Транзакции" Click="ShowTransactions_Click" Background="#88D398" Foreground="White" Margin="0,5" Padding="10,5"/>
                    <Button Content="🎯 Цели" Click="ShowGoals_Click" Background="#88D398" Foreground="White" Margin="0,5" Padding="10,5"/>
                    <Button Content="📊 Статистика" Click="ShowStatistics_Click" Background="#88D398" Foreground="White" Margin="0,5" Padding="10,5"/>
                    <Button Content="👑Администраторы" Click="ShowAdmins_Click" Background="#1A946F" Foreground="White" Margin="0,20,0,5" Padding="10,5" Width="134"/>
                </StackPanel>
            </Border>

            <!-- Область контента -->
            <Frame Grid.Column="1" Name="MainFrame" NavigationUIVisibility="Hidden" Margin="10"/>
        </Grid>
    </Grid>
</Window>